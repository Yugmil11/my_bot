<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white" >
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange" >
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue" >
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black" >
        <color rgba="0 0 0 1"/>
    </material>

    <!-- BASE LINK  -->

    <link name="base_link">
    
    </link>

    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link ="base_link"/>
        <child link ="chassis"/>
        <origin xyz="-0.05 0 0"/>   

    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.07 0 0.02"/>
            <geometry>
                <box size="0.20 0.16 0.05"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.07 0 0.02"/>
            <geometry>
                <box size="0.20 0.16 0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="1" x="0.20" y="0.16" z="0.05">
            <origin xyz="0.07 0 0.02" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- LEFT WHEEL 1 -->

    <joint name="left_wheel_joint_1" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_1"/>
        <origin xyz="-0.06 0.08 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>

    </joint>

    <link name="left_wheel_1">
        <visual>
            <material name="black"/>
            <geometry>
                <cylinder radius="0.035" length="0.04"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.035" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.2" length="0.04" radius="0.035">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

<!-- LEFT WHEEL 2 -->

    <joint name="left_wheel_joint_2" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_2"/>
        <origin xyz="0.09 0.08 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>

    </joint>

    <link name="left_wheel_2">
        <visual>
            <material name="black"/>
            <geometry>
                <cylinder radius="0.035" length="0.04"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.035" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.2" length="0.04" radius="0.035">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

<!-- RIGHT WHEEL 1 -->

    <joint name="right_wheel_joint_1" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_1"/>
        <origin xyz="-0.06 -0.08 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>

    </joint>

    <link name="right_wheel_1">
        <visual>
            <material name="black"/>
            <geometry>
                <cylinder radius="0.035" length="0.04"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.035" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.2" length="0.04" radius="0.035">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- RIGHT WHEEL 2 -->

    <joint name="right_wheel_joint_2" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_2"/>
        <origin xyz="0.09 -0.08 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>

    </joint>

    <link name="right_wheel_2">
        <visual>
            <material name="black"/>
            <geometry>
                <cylinder radius="0.035" length="0.04"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.035" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.2" length="0.04" radius="0.035">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    </robot>